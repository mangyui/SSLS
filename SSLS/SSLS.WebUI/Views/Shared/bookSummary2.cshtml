@model SSLS.Domain.Concrete.Book



<div class="Mylist">
    <a href="#@Model.Id"><img src="@Model.ImageUrl" alt="@Model.Id"></a>
    <div class="Mylist_body">
        <h3 class="hheight"><a href="#@Model.Id">@Model.Name</a><span class="label label-info">@Model.Status</span></h3>
        <p class="pheight">@Model.Description</p>
        <p class="pull-right"><span>@Model.Press </span> <span>@Model.PublishDate.Value.ToString("d")</span></p>
        <p><a class="label label-danger">@Model.Authors</a></p>
        <a href="" class="addto pull-right">添加</a>
        <span class="spanPrice">@Model.Price.Value.ToString("c")</span>
    </div>
</div>



